<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">
    <servers>
        <server>
            <id>oss-jfrog-snapshots</id>
            <username>${env.BINTRAY_USERNAME}</username>
            <password>${env.BINTRAY_PASSWORD}</password>
        </server>

        <server>
            <id>bintray-pflueras-platform</id>
            <username>${env.BINTRAY_USERNAME}</username>
            <password>${env.BINTRAY_PASSWORD}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>pflueras-platform</id>

            <repositories>
                <repository>
                    <id>bintray-pflueras-platform</id>
                    <name>bintray-pflueras-platform</name>
                    <url>https://dl.bintray.com/pflueras/pflueras-platform</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>

                <repository>
                    <id>oss-jfrog-snapshots</id>
                    <name>oss-jfrog-snapshots</name>
                    <url>https://oss.jfrog.org/artifactory/oss-snapshot-local</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>pflueras-platform</activeProfile>
    </activeProfiles>

</settings>
